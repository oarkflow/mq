{
    "name": "Login Flow",
    "key": "login:flow",
    "nodes": [
        {
            "id": "LoginForm",
            "first_node": true,
            "node": "render-html",
            "data": {
                "additional_data": {
                    "schema_file": "login.json",
                    "template_file": "app/templates/basic.html"
                }
            }
        },
        {
            "id": "ValidateLogin",
            "node": "condition",
            "data": {
                "mapping": {
                    "username": "username",
                    "password": "password"
                },
                "additional_data": {
                    "conditions": {
                        "invalid": {
                            "id": "condition:invalid_login",
                            "node": "error-page",
                            "group": {
                                "reverse": true,
                                "filters": [
                                    {
                                        "field": "username",
                                        "operator": "eq",
                                        "value": "admin"
                                    },
                                    {
                                        "field": "password",
                                        "operator": "eq",
                                        "value": "password"
                                    }
                                ]
                            }
                        }
                    }
                }
            }
        },
        {
            "id": "error-page",
            "node": "render-html",
            "data": {
                "mapping": {
                    "error_message": "eval.{{'Invalid login credentials.'}}",
                    "error_field": "eval.{{'username'}}",
                    "retry_suggested": "eval.{{true}}"
                },
                "additional_data": {
                    "template_file": "app/templates/error.html"
                }
            }
        }
    ],
    "edges": [
        {
            "source": "LoginForm",
            "target": [ "ValidateLogin" ]
        }
    ]

}
